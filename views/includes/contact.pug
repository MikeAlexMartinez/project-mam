include ./_mixins.pug

section#contact.contact
  h2 Get in #[span touch], I would love to hear from you.
  p=data.contactForm.mainText
  div.contactForm
    form(class="form-group" action="" id="contactForm")
      input(type="hidden" value=`${csrfToken}` name="_csrf" hidden)
      div.mainInputs
        div.formSide.left
          input(id="contact-name" class="entry" type="text" placeholder="Name" name="name" required)
          input(id="contact-email" class="entry" type="email" placeholder="Email" name="email" required)
        div.formSide.right
          textarea(id="contact-message" class="entry" type="text" maxlength="600" placeholder="Message" name="message" rows="4" required)
      div.buttonContainer.clicky
        button(type="submit" class="btn") Send
        div#contactToast.toast