mixin socialItem(sI)
  div.socialIcon
    a(href=sI.link)
      span(class=`${sI.icon} white`)

mixin skill(s)
  div.skill
    div.imgContainer
      img(src=`./myImages/${s.image}`)
    div.skillText
      p=s.skill

mixin serviceItem(sI)
  p=sI

mixin project(p)
  .grid-item
    img(src=p.image)
    +projectOverlay(p)

mixin projectOverlay(p)
  figcaption.imgInfo.cf
    div.text
      h4=p.heading
      p=p.author
    button.btn(target=p.heading.toLowerCase().replace(' ','')) View

mixin projectDetail(p)
  div(id=p.heading.toLowerCase().replace(' ','') class="gallerySlide out-right")
    div.imgContainer
      div.btn.ion-md-close.close-project
      img(src=p.image)
    div.projectDetail
      h2=p.heading
      for text in p.detail
        p=text

mixin subpageHeader()
  div.sc-header
    div.sc-header-content
      h2=location
      i(class=`${filtered ? 'ion-md-funnel' : 'ion-ios-funnel-outline' }`)

mixin subpageList()
  div.sc-list-container
    div#sc-list-filter.sc-list-filter
    div#sc-list-tags.sc-list-tags
    div#sc-list
      +subpageItem()

mixin subpageItem(i)
  div.sc-paper
    div.sc-image
      img(src="images/shells-massage-therapy-sand.jpg")
    div.sc-detail
      div.sc-item-header
        h4 Sand
      div.sc-item-summary
        p This is a placeholder project
      div.sc-item-controls